{
  "name": "@dojo/widget-core",
  "version": "0.4.1-pre",
  "description": "A core widget library for Dojo 2",
  "private": true,
  "homepage": "https://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/widget-core/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "files": [
    "dist",
    "src",
    "typings.json"
  ],
  "engines": {
    "npm": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/widget-core.git"
  },
  "scripts": {
    "benchmark": "./run-benchmark.sh",
    "build:umd": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:static": "sync-glob --no-d \"{src,tests}/**/*\" \"!{src,tests}/**/*.ts\" \"{src,tests}/**/*.d.ts\" dist/testing",
    "build": "concurrently \"npm run build:umd\" \"npm run build:esm\" \"npm run build:static\"",
    "lint": "tslint -p tsconfig.json",
    "package": "dojo-scripts-package",
    "prepublish": "dojo-scripts-install-peer-deps",
    "test": "intern",
    "test:local": "intern -- config=@local",
    "test:browserstack": "intern -- config=@browserstack",
    "watch:umd": "tsc -w",
    "watch:esm": "tsc -p tsconfig.esm.json -w",
    "watch:static": "npm run build:static -- -w",
    "watch": "concurrently \"npm run watch:umd\" \"npm run watch:esm\" \"npm run watch:static\""
  },
  "peerDependencies": {
    "@dojo/core": "~0.3.0",
    "@dojo/has": "~0.1.1",
    "@dojo/shim": "~0.2.3",
    "@dojo/i18n": "~0.3.0"
  },
  "devDependencies": {
    "@dojo/scripts": "../tarballs/dojo-scripts-0.1.0-pre.tgz",
    "@dojo/interfaces": "~0.2.0",
    "@dojo/loader": "~0.1.1",
    "@types/glob": "5.0.*",
    "@types/jsdom": "2.0.*",
    "@types/ramda": "^0.25.5",
    "@types/selenium-webdriver": "^3.0.8",
    "@types/sinon": "^1.16.31",
    "@types/web-animations-js": "^2.2.5",
    "@types/yargs": "^8.0.2",
    "@webcomponents/custom-elements": "^v1.0.0-rc.3",
    "bootstrap": "^3.3.7",
    "chromedriver": "2.33.2",
    "codecov.io": "0.1.6",
    "concurrently": "~3.5.1",
    "glob": "^7.0.6",
    "intern": "~4.1.0",
    "jsdom": "^9.5.0",
    "jstat": "^1.7.1",
    "ramda": "^0.25.0",
    "selenium-webdriver": "3.6.0",
    "serve": "^6.4.1",
    "sinon": "^1.17.6",
    "sync-glob": "~1.3.7",
    "tslint": "^5.2.0",
    "typescript": "~2.6.1"
  },
  "dependencies": {
    "intersection-observer": "^0.4.2",
    "pepjs": "^0.4.2",
    "web-animations-js": "^2.3.1"
  }
}
