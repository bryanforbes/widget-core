{
	"extends": "./node_modules/@dojo/scripts/intern/base.json",
	"capabilities+": {
		"name": "@dojo/widget-core"
	},
	"browser": {
		"loader": {
			"script": "./node_modules/@dojo/scripts/intern/loader.js",
			"options": {
				"packages": [
					{ "name": "src", "location": "dist/testing/src" },
					{ "name": "tests", "location": "dist/testing/tests" },
					{ "name": "cldr-data", "location": "node_modules/cldr-data" },
					{ "name": "cldrjs", "location": "node_modules/cldrjs" },
					{ "name": "globalize", "location": "node_modules/globalize", "main": "dist/globalize" },
					{ "name": "web-animations-js", "location": "node_modules/web-animations-js" }
				],
				"map": {
					"globalize": {
						"cldr": "cldrjs/dist/cldr",
						"cldr/event": "cldrjs/dist/cldr/event",
						"cldr/supplemental": "cldrjs/dist/cldr/supplemental",
						"cldr/unresolved": "cldrjs/dist/cldr/unresolved"
					}
				}
			}
		}
	},
	"node" : {
		"plugins": [
			{
				"script": "./dist/testing/tests/support/loadJsdom.js",
				"useLoader": true
			}
		]
	},
	"coverage": [
		"./dist/testing/src/**/*.js"
	]
}
